        const delay = parseInt(el.getAttribute('data-delay') || '0') / 1000;

        gsap.from(el, {
          scrollTrigger: {
            trigger: el,
            start: 'top 85%',
            toggleActions: 'play none none none',
          },
          y: 30,
          opacity: 0,
          duration: 0.6,
          delay,
          ease: 'power2.out',
        });
