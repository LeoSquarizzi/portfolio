---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';

const game = {
  title: 'The Investors Game',
  tagline: 'Manager 路 Strategy 路 Simulator 路 Multiplayer 路 2D',
  shortDescription:
    'A financial life simulator where players manage income, expenses, investments, and career choices to progress through Maslows Hierarchy of Needs and compete on global leaderboards.',
  snapshop: {
    developer: 'Tindin Educa莽茫o',
    timeOnProject: '6 months',
    engine: 'Phaser',
    partners: 'B3 路 Tesouro Direto 路 Artemisia 路 TD Impacta',
  },

  links: [
    { label: 'App Store', href: 'https://apps.apple.com/br/app/o-jogo-do-investidor/id6742085705', external: true },
    {
      label: 'Google Play',
      href: 'https://play.google.com/store/apps/details?id=br.com.ojogodoinvestidor',
      external: true,
    },
    { label: 'PC', href: 'https://ojogodoinvestidor.com.br/', external: true },
  ],

  resp_midia: '/img/investor/investortrailer.mp4',

  responsibilities: [
    'Game systems and economy design ownership',
    'Quest and progression design',
    'City level design and interaction flow',
    'Economy balancing (salary, items, investments, enterprises)',
    'Creation and management of 400+ in-game items',
    'UI/UX collaboration for complex menu systems',
  ],
  role: 'Lead Game Designer 路 Game Balance 路 Level Designer',
};

const highlight_1_Images = ['/img/investor/investormenu.gif', '/img/investor/investormenu2.gif'];

const highlight_2_Images = ['/img/literama/origami1.png', '/img/literama/origami2.png'];

const getLinkIcon = (label: string) => {
  const key = label.toLowerCase();

  // Google Play
  if (key.includes('google') || key.includes('play')) {
    return `
      <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
        <path fill="currentColor" d="M3.9 2.7c-.3.3-.4.8-.4 1.3v16c0 .5.1 1 .4 1.3l.1.1L13 12 4 2.6l-.1.1Zm10 9.2 2.6-2.6-9-5.2 6.4 7.8Zm3.6 0 2.5-1.5c.9-.5.9-1.3 0-1.8L17.5 7 14.8 9.6l2.7 2.3Zm-3.6.2L7.5 19.9l9-5.2-2.6-2.6Z"/>
      </svg>
    `;
  }

  // App Store (iOS)
  if (key.includes('app') || key.includes('ios') || key.includes('store')) {
    return `
      <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
        <path fill="currentColor" d="M16.4 13.2l-2.9-5.1c-.2-.4-.7-.6-1.1-.4-.4.2-.6.7-.4 1.1l2.9 5.1h1.5ZM10.9 13.2L8 8.1c-.2-.4-.7-.6-1.1-.4-.4.2-.6.7-.4 1.1l2.8 4.9.1.1h1.5Zm8.2 5.6H4.9c-.5 0-.9.4-.9.9s.4.9.9.9h14.2c.5 0 .9-.4.9-.9s-.4-.9-.9-.9ZM13.9 4.1c.6-.7 1-1.6.9-2.6-1 .1-1.9.6-2.5 1.3-.6.7-1 1.6-.9 2.6 1-.1 1.9-.6 2.5-1.3Z"/>
        <path fill="currentColor" d="M20 16.2c-1.5 0-2.3-.7-3.1-1.4-.7-.6-1.3-1.1-2.4-1.1-1.1 0-1.7.5-2.4 1.1-.8.7-1.6 1.4-3.1 1.4s-2.3-.7-3.1-1.4c-.3-.3-.6-.5-.9-.7-.4-.2-.6-.7-.4-1.1.2-.4.7-.6 1.1-.4.5.3.9.6 1.3.9.7.6 1.3 1.1 2 .9.8 0 1.3-.4 2-1 .8-.7 1.8-1.6 3.5-1.6s2.7.9 3.5 1.6c.7.6 1.2 1 2 1 .2 0 .4 0 .6-.1.5-.1.9.2 1 .6.1.5-.2.9-.6 1-.4.2-.8.3-1.2.3Z"/>
      </svg>
    `;
  }

  // GDD (document)
  if (key.includes('gdd')) {
    return `
      <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
        <path fill="currentColor" d="M7 3h7l5 5v13c0 1.1-.9 2-2 2H7c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2Zm7 1.5V9h4.5L14 4.5ZM8 12c0-.6.4-1 1-1h6c.6 0 1 .4 1 1s-.4 1-1 1H9c-.6 0-1-.4-1-1Zm0 4c0-.6.4-1 1-1h6c.6 0 1 .4 1 1s-.4 1-1 1H9c-.6 0-1-.4-1-1Z"/>
      </svg>
    `;
  }

  // PC
  return `
    <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
      <path fill="currentColor" d="M4 5.5C4 4.7 4.7 4 5.5 4h13C19.3 4 20 4.7 20 5.5v9C20 15.3 19.3 16 18.5 16H13v2h2c.5 0 1 .4 1 1s-.5 1-1 1H9c-.5 0-1-.4-1-1s.5-1 1-1h2v-2H5.5C4.7 16 4 15.3 4 14.5v-9Zm1.5.5v8.5h13V6h-13Z"/>
    </svg>
  `;
};
