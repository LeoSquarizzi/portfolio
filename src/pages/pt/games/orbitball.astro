---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';

const game = {
  title: 'Orbit Ball',
  tagline: 'Arcade 路 Casual 路 2D 路 Mobile',
  shortDescription: 'A minimalist mobile game created as a design experiment focused on accessibility and simplicity.',
  snapshop: {
    developer: 'Talking Capybara [Solo Dev]',
    timeOnProject: '2 months',
    engine: 'Unity',
  },

  links: [
    {
      label: 'Google Play',
      href: 'https://play.google.com/store/apps/details?id=com.TalkingCapybara.SavetheBoat',
      external: true,
    },
    {
      label: 'GDD',
      href: 'https://docs.google.com/document/d/12L4kcsp8adTPpRHMj7mOEM7qgdFPJ2VNJx9WAVE16O4/edit?usp=sharing',
      external: true,
    },
    {
      label: 'Log Dev Process',
      href: 'https://docs.google.com/document/d/1ucuy_hDa28YrWVej-RltEkhVWa5292zFdE8gSDY1r1I/edit?usp=sharing',
      external: true,
    },
  ],

  role: 'Lead Game Designer 路 Tech Design 路 Level Designer',
};

const highlight_1_Images = ['/img/savetheboat/sketch.jpg', '/img/savetheboat/sketch2.png'];

const highlight_2_Images = ['/img/literama/origami1.png', '/img/literama/origami2.png'];

const getLinkIcon = (label: string) => {
  const key = label.toLowerCase();

  // Google Play
  if (key.includes('google') || key.includes('play')) {
    return `
      <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
        <path fill="currentColor" d="M3.9 2.7c-.3.3-.4.8-.4 1.3v16c0 .5.1 1 .4 1.3l.1.1L13 12 4 2.6l-.1.1Zm10 9.2 2.6-2.6-9-5.2 6.4 7.8Zm3.6 0 2.5-1.5c.9-.5.9-1.3 0-1.8L17.5 7 14.8 9.6l2.7 2.3Zm-3.6.2L7.5 19.9l9-5.2-2.6-2.6Z"/>
      </svg>
    `;
  }

  // GDD (document)
  if (key.includes('gdd')) {
    return `
      <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
        <path fill="currentColor" d="M7 3h7l5 5v13c0 1.1-.9 2-2 2H7c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2Zm7 1.5V9h4.5L14 4.5ZM8 12c0-.6.4-1 1-1h6c.6 0 1 .4 1 1s-.4 1-1 1H9c-.6 0-1-.4-1-1Zm0 4c0-.6.4-1 1-1h6c.6 0 1 .4 1 1s-.4 1-1 1H9c-.6 0-1-.4-1-1Z"/>
      </svg>
    `;
  }

  // PC
  return `
    <svg viewBox="0 0 24 24" class="w-5 h-5" aria-hidden="true">
      <path fill="currentColor" d="M4 5.5C4 4.7 4.7 4 5.5 4h13C19.3 4 20 4.7 20 5.5v9C20 15.3 19.3 16 18.5 16H13v2h2c.5 0 1 .4 1 1s-.5 1-1 1H9c-.5 0-1-.4-1-1s.5-1 1-1h2v-2H5.5C4.7 16 4 15.3 4 14.5v-9Zm1.5.5v8.5h13V6h-13Z"/>
    </svg>
  `;
};
---

<BaseLayout title={`${game.title} - Leonardo Squarizzi`} description={game.shortDescription}>
  <Header currentPage="games" />

  <main class="pt-[72px]">
    <!-- Header / Hero -->
    <section class="py-12 md:py-16 bg-bg-primary">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center flex flex-col items-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-4" data-animate="fade-up">
            {game.title}
          </h1>

          <p class="text-sm md:text-base text-text-muted mb-8" data-animate="fade-up" data-delay="80">
            {game.tagline}
          </p>

          <p
            class="text-base md:text-lg text-text-secondary max-w-3xl text-center"
            data-animate="fade-up"
            data-delay="120">
            {game.shortDescription}
          </p>

          <!-- Info Boxes -->
          <div class="grid grid-cols-1 md:grid-cols-1 gap-4 md:gap-6 mt-10" data-animate="fade-up" data-delay="160">
            <!-- Box Snapshot -->
            <div class="bg-bg-card border border-border-default rounded-2xl p-6">
              <p class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-4">Project Snapshot</p>

              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-3">
                  <span class="mt-1.5 w-2 h-2 rounded-full bg-accent-coral flex-shrink-0"></span>
                  <span><span class="text-text-muted">Developer:</span> {game.snapshop.developer}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="mt-1.5 w-2 h-2 rounded-full bg-accent-coral flex-shrink-0"></span>
                  <span><span class="text-text-muted">Engine:</span> {game.snapshop.engine}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="mt-1.5 w-2 h-2 rounded-full bg-accent-coral flex-shrink-0"></span>
                  <span><span class="text-text-muted">Time on project:</span> {game.snapshop.timeOnProject}</span>
                </li>
              </ul>
            </div>          
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="flex items-center gap-4 my-6" data-animate="fade-up">
      <span class="flex-1 h-px bg-border-default"></span>

      <span class="text-xs font-semibold text-text-muted uppercase tracking-widest whitespace-nowrap">
        Project Highlights
      </span>

      <span class="flex-1 h-px bg-border-default"></span>
    </div>

    <!-- Highlight 02 -->
    <section class="py-12 md:py-16">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
            <!-- Left SIDE -->
            <div
              class="bg-bg-card border border-border-default rounded-2xl overflow-hidden aspect-video"
              data-animate="fade-up"
              data-delay="120">
              <iframe
                class="w-full h-full"
                src="https://www.youtube.com/embed/NbfJQ6axoV8"
                title="Orbit Ball Trailer"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen>
              </iframe>
            </div>

            <!-- Text -->
            <div data-animate="fade-up" class="text-text-secondary font-normal">
              <h3 class="text-xl md:text-2xl font-bold text-text-primary mb-0">Level Design & Difficulty Tuning</h3>

              <p class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-5">
                Game Design 路 Level Design 路 Mechanics
              </p>

              <div class="text-text-secondary font-normal">
                <p class="font-semibold text-text-primary mb-1"> Context</p>

                <p class="mb-2 text-[15px]">Orbit Ball is a minimalist mobile game created as a design experiment.</p>
                <p class="mb-2 text-[15px]">
                  The goal was to show that a game can be fully playable with one hand, accessible to colorblind
                  players, and be really hard.
                </p>
                <p class="mb-2 text-[15px]">
                  By limiting visual noise and mechanical complexity, the project demonstrates how accessibility can
                  coexist with hard games.
                </p>
                <p class="mb-2 text-[15px]">It was used as a practical case study in Talking Capybara presentations.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Highlight 02 -->
    <section class="py-12 md:py-16">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
            <!-- Text -->
            <div data-animate="fade-up" class="text-text-secondary font-normal">
              <h3 class="text-xl md:text-2xl font-bold text-text-primary mb-0">Prototyping & Study Case</h3>

              <p class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-5">
                Game Design 路 Game Developer 路 UX 路 Accessibility
              </p>

              <div class="space-y-5 text-text-secondary text-sm md:text-base">
                <div>
                  <p class="font-semibold text-text-primary mb-1"> The problem</p>
                  <p>
                    With a single-input control scheme and a monochromatic visual system, every design decision had to
                    balance clarity and challenge.
                  </p>
                  <p>The game needed to remain readable and accessible without becoming easier or losing depth.</p>
                </div>

                <div>
                  <p class="font-semibold text-text-primary mb-1 mt-2"> What I did</p>
                  <ul class="list-disc pl-5 space-y-1 text-[16px] mb-1">
                    <li>Designed all levels with progressive difficulty curves</li>
                    <li>Tuned spatial layouts to support one hand control</li>
                    <li>Balanced obstacle density and movement speed</li>
                    <li>Adjusted visuals and spacing to ensure clarity</li>
                  </ul>
                </div>

                <div>
                  <p class="font-semibold text-text-primary mb-1 mt-2"> Result</p>
                  <ul class="list-disc pl-5 space-y-1 text-[16px] mb-1">
                    <li>Clear level readability despite limited visual palette</li>
                    <li>Consistent difficulty progression across stages</li>
                    <li>Accessible control scheme without compromising challenge</li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Left SIDE -->
            <div class="bg-bg-card border border-border-default rounded-2xl p-4">
              <div class="relative w-full aspect-[9/16] max-h-[450px] rounded-xl overflow-hidden">
                <img
                  src="/img/orbitball/gameplay.jpg"
                  alt="Save The Boat - GDD"
                  class="absolute inset-0 w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="flex items-center gap-4 my-3" data-animate="fade-up">
      <span class="flex-1 h-px bg-border-default"></span>
      <span class="text-xs font-semibold text-text-muted uppercase tracking-widest whitespace-nowrap">Game images</span>
      <span class="flex-1 h-px bg-border-default"></span>
    </div>

    <!-- Other Highlights -->
    <section class="mt-10 mb-8">
      <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Image 1 -->
          <div class="bg-bg-card border border-border-default rounded-2xl p-4">
            <div class="relative w-full aspect-[9/16] rounded-xl overflow-hidden">
              <img
                src="/img/orbitball/menu.jpg"
                alt="Save The Boat - GDD"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>

          <!-- Image 2 -->
          <div class="bg-bg-card border border-border-default rounded-2xl p-4">
            <div class="relative w-full aspect-[9/16] rounded-xl overflow-hidden">
              <img
                src="/img/orbitball/menuach.jpg"
                alt="Save The Boat - Difficulty"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>

          <!-- Image 3 -->
          <div class="bg-bg-card border border-border-default rounded-2xl p-4">
            <div class="relative w-full aspect-[9/16] rounded-xl overflow-hidden">
              <img
                src="/img/orbitball/menulevel.jpg"
                alt="Save The Boat - Playtesting"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.querySelectorAll('[data-animate="fade-up"]').forEach((el) => {
    const delay = parseInt(el.getAttribute('data-delay') || '0') / 1000;

    gsap.from(el, {
      scrollTrigger: {
        trigger: el,
        start: 'top 85%',
        toggleActions: 'play none none none',
      },
      y: 30,
      opacity: 0,
      duration: 0.6,
      delay,
      ease: 'power2.out',
    });
  });
</script>
