---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';

const contactMethods = [
    {
    title: 'LinkedIn',
    description: 'Connect professionally',
    icon: 'linkedin',
    href: 'https://www.linkedin.com/in/leonardo-squarizzi/',
    color: 'blue',
  },
  {
    title: 'Email',
    description: 'Contact me anytime',
    icon: 'youtube',
    href: 'https://mail.google.com/mail/?view=cm&to=leosquarizzi@gmail.com&su=Awesome%20work&body=Hi%20Leo,%0A%0AI%20came%20across%20your%20portfolio%20and%20would%20love%20to%20talk%20about%20a%20potential%20collaboration.%0A%0ALet%E2%80%99s%20connect.',
    color: 'orange',
  },
  {
    title: 'GitHub',
    description: 'Code and repositories',
    icon: 'github',
    href: 'https://github.com/leosquarizzi',
    color: 'coral',
  },
];
---

<BaseLayout title="Contact - Leonardo Squarizzi" description="Get in touch with Leonardo Squarizzi. I'd love to work with you!">
  <Header currentPage="contact" />

  <main class="pt-[72px]">
    <!-- Hero Section -->
    <section class="py-16 md:py-24 bg-bg-primary">
      <div class="container">
        <div class="text-center mb-16">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-text-primary mb-10" data-animate="fade-up">
            Get In Touch
          </h1>
          <p class="text-xl text-text-secondary max-w-2xl mx-auto" data-animate="fade-up" data-delay="100">
            Interested in working together, discussing game design, or exploring new projects? Feel free to reach out.
          </p>
        </div>

        <!-- Contact Methods -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {contactMethods.map((method, index) => (
            <a
              href={method.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group bg-bg-card border border-border-default rounded-2xl p-6 text-center transition-all duration-300 hover:border-border-accent hover:-translate-y-1"
              data-animate="fade-up"
              data-delay={index * 10}
            >
              <div class={`w-14 h-14 mx-auto mb-4 rounded-xl bg-bg-hover flex items-center justify-center transition-transform duration-300 group-hover:scale-110`}>
                <i data-lucide={method.icon} class={`w-7 h-7 text-accent-${method.color}`}></i>
              </div>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{method.title}</h3>
              <p class="text-text-muted text-sm">{method.description}</p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
            Working Details
          </h2>

          <div class="space-y-4">
            <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay="100">
              <h3 class="text-lg font-semibold text-text-primary mb-2">Are you open to freelance, contract, or full-time work?</h3>
              <p class="text-text-secondary">
                Yes. I’m open to freelance, contract, and full-time opportunities.
              </p>
            </div>
            
            <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay="200">
              <h3 class="text-lg font-semibold text-text-primary mb-2">Do you work remotely, local or hybrid?</h3>
              <p class="text-text-secondary">
                I’m used to remote work. On-site and hybrid roles are possible within the São Paulo region.
              </p>
            </div>
            
            <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay="400">
              <h3 class="text-lg font-semibold text-text-primary mb-2">What roles do you usually take on?</h3>
              <p class="text-text-secondary">
                Game Designer, Level Designer and Game Developer. 
              </p>
            </div>

            <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay="300">
              <h3 class="text-lg font-semibold text-text-primary mb-2">What type of projects are you interested in?</h3>
              <p class="text-text-secondary">
                I mainly focus on game projects of any size, from small indie games to larger productions, for both mobile and PC. 
                I also have experience with educational games and gamification and am open to related opportunities.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.querySelectorAll('[data-animate="fade-up"]').forEach((el) => {
    const delay = parseInt(el.getAttribute('data-delay') || '0') / 1000;

    gsap.from(el, {
      scrollTrigger: {
        trigger: el,
        start: 'top 85%',
        toggleActions: 'play none none none',
      },
      y: 30,
      opacity: 0,
      duration: 0.6,
      delay,
      ease: 'power2.out',
    });
  });
</script>
