---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="bg-bg-card border border-border-default rounded-2xl p-6">
  <h3 class="text-sm font-semibold text-text-primary uppercase tracking-widest mb-4">
    {title}
  </h3>

  <ul class="space-y-3">
    {items.map((text) => (
      <li class="flex items-start gap-3">
        <span class="w-2 h-2 rounded-full bg-accent-coral mt-2 shrink-0"></span>
        <span class="text-sm text-text-secondary leading-relaxed">{text}</span>
      </li>
    ))}
  </ul>
</div>
