---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  highlights?: string[];
  image?: string;
  tags: string[];
  href: string;
  featured?: boolean;
}

const {
  title,
  subtitle,
  description,
  highlights = [],
  image,
  tags,
  href,
  featured = false,
} = Astro.props;

const hasHighlights = highlights && highlights.length > 0;
---

{featured ? (
  <article class="game-card-featured relative overflow-hidden rounded-3xl bg-bg-card border border-border-default">
    <div class="flex flex-col lg:flex-row">
      <!-- Preview -->
      <div class="relative lg:w-1/2 aspect-video lg:aspect-auto bg-bg-hover overflow-hidden">
        {image ? (
          <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        ) : (
          <div class="w-full h-full min-h-[300px] flex items-center justify-center bg-gradient-to-br from-bg-hover to-bg-tertiary">
            <div class="text-6xl opacity-20">ðŸŽ®</div>
          </div>
        )}
        <!-- Play overlay -->
        <a
          href={href}
          class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 hover:opacity-100 transition-opacity duration-300"
        >
          <div class="w-20 h-20 bg-accent-coral rounded-full flex items-center justify-center shadow-glow-coral transition-transform duration-300 hover:scale-110">
            <i data-lucide="play" class="w-8 h-8 text-white ml-1"></i>
          </div>
        </a>
      </div>

      <!-- Info -->
      <div class="lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center">
        <h3 class="text-3xl lg:text-4xl font-bold text-text-primary mb-1">
          {title}
        </h3>
        {subtitle && (
          <p class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-6">
            {subtitle}
          </p>
        )}
        {hasHighlights ? (
          <ul class="text-text-secondary text-lg mb-6 space-y-2">
            {highlights.map((item) => (
              <li class="flex items-start gap-3">
                <span class="mt-2 w-2 h-2 rounded-full bg-accent-coral flex-shrink-0"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-text-secondary text-lg mb-6">
            {description}
          </p>
        )}

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag) => (
            <span class="px-4 py-1.5 text-sm text-text-muted bg-bg-hover rounded-full">
              {tag}
            </span>
          ))}
        </div>

       
      </div>
    </div>
  </article> 
  /* 
        <!-- Actions -->
       <div class="flex flex-wrap gap-4">
          <a
            href={href}
            class="inline-flex items-center gap-2 px-6 py-3 bg-accent-coral text-white font-semibold rounded-xl hover:brightness-110 transition-all duration-200"
          >
            <i data-lucide="play" class="w-5 h-5"></i>
            Play Now
          </a>
          <a
            href={href}
            class="inline-flex items-center gap-2 px-6 py-3 bg-transparent border border-border-default text-text-secondary rounded-xl hover:bg-bg-hover hover:text-text-primary transition-all duration-200"
          >
            Learn More
          </a>
        </div>*/
) : (
  <article class="game-card group bg-bg-card border border-border-default rounded-2xl overflow-hidden transition-all duration-300 hover:border-border-accent hover:-translate-y-1">
    <!-- Preview -->
    <div class="relative aspect-video bg-bg-hover overflow-hidden">
      {image ? (
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-bg-hover to-bg-tertiary">
          <div class="text-4xl opacity-20">ðŸŽ®</div>
        </div>
      )}
      <!-- Play button overlay -->
      <a
        href={href}
        class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
        <div class="w-14 h-14 bg-accent-coral rounded-full flex items-center justify-center shadow-glow-coral">
          <i data-lucide="play" class="w-6 h-6 text-white ml-0.5"></i>
        </div>
      </a>
    </div>

    <!-- Info -->
    <div class="p-5">
      <h3 class="text-lg font-semibold text-text-primary mb-0">
        {title}
      </h3>

      {subtitle && (
        <p class="text-[10px] font-semibold text-accent-coral uppercase tracking-widest mb-4">
          {subtitle}
        </p>
      )}
        {hasHighlights ? (
          <ul class="text-text-secondary text-sm mb-3 space-y-1.5">
            {highlights.slice(0, 3).map((item) => (
              <li class="flex items-start gap-2">
                <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-accent-coral flex-shrink-0"></span>
                <span class="line-clamp-2">{item}</span>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-text-secondary text-sm mb-3 line-clamp-2">
            {description}
          </p>
        )}
      <div class="flex flex-wrap gap-2">
        {tags.slice(0, 5).map((tag) => (
          <span class="px-2.5 py-1 text-xs text-text-muted bg-bg-hover rounded-lg">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </article>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
